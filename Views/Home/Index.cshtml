@model TrainingMVC.Model.HomeViewModel

<div class="container mt-5">
    <h1 class="text-center mb-4">Home</h1>

    <div class="mb-5">
        <h2 class="text-primary">Departments</h2>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>@department.Id</td>
                        <td>@department.Name</td>
                        <td>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Edit", "Department", new { id = department.Id })">Edit</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Department", new { id = department.Id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary mt-2" href="@Url.Action("Create", "Department")">Create New Department</a>
    </div>

    <div class="mb-5">
        <h2 class="text-primary">Employees</h2>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Edit", "Employee", new { id = employee.Id })">Edit</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Employee", new { id = employee.Id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary mt-2" href="@Url.Action("Create", "Employee")">Create New Employee</a>
    </div>

    <div class="mb-5">
        <h2 class="text-primary">Designations</h2>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var designation in Model.Designations)
                {
                    <tr>
                        <td>@designation.Id</td>
                        <td>@designation.Name</td>
                        <td>
                            <a class="btn btn-sm btn-info" href="@Url.Action("Edit", "Designation", new { id = designation.Id })">Edit</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Designation", new { id = designation.Id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary mt-2" href="@Url.Action("Create", "Designation")">Create New Designation</a>
    </div>
</div>
