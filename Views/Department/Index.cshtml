@model IEnumerable<TrainingMVC.Model.Entity.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
